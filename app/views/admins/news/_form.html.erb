<div class="panel-body">
  <%= simple_form_for(@admins_news, url: @admins_news.new_record? ? admins_news_index_path  : admins_news_path(@admins_news), html: {class: "col-md-6"}) do |f| %>
    <%= f.input :content,as: :ckeditor, input_html: { ckeditor: {toolbar: 'Full'}, class: "form-control" } %>
    <%= f.input :tags, input_html: {class: "form-control"} %>
    <%= f.input :release_date, input_html: {class: "form-control"} %>
    <%= f.input :expiry_date, input_html: {class: "form-control"} %>
    <%= select_tag(:option, options_for_select(@positions), selected: :option ),{include_blank: false}, {:class => "chosen-select", "data-placeholder": "Choose Positions", style: "width: 300px;", multiple: true} %>

    <%= f.submit "Add News", class: "btn btn-primary" %>
  <% end %>
</div>
