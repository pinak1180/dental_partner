
<div class="panel-body">
  <%= simple_form_for(@admins_news, url: @admins_news.new_record? ? admins_news_index_path  : admins_news_path(@admins_news), html: {class: "col-md-12"}) do |f| %>
    <%= f.input :title, as: :string, input_html: {class: "form-control", autofocus: true} %><br/>
    <%= f.input :content,as: :ckeditor, input_html: { ckeditor: {toolbar: 'Full'}, class: "form-control" } %><br/>
    <%= f.input :tags, input_html: {class: "form-control thetags"} %><br/>
    <%= f.input :release_date, as: :string, input_html: {class: "form-control datepicker"} %><br/>
    <%= f.input :expiry_date, as: :string, input_html: {class: "form-control datepicker"} %><br/>
    <%= select_tag(:position_ids, options_for_select(@positions), {:class => "chosen-select", "data-placeholder": "Choose Positions", style: "width: 300px;", multiple: true}) %><br/>
    <div class="form-actions">
      <%= f.submit "Add News", class: "btn btn-primary mt15" %>
    </div>
  <% end %>
</div>
