<% provide :title, "Listing Forums" %>
<section class="panel">
  <header class="panel-heading">Listing Forums</header>
  <div class="panel-body">
    <%= link_to 'Add New Forum', new_admins_forum_path,  class: "btn btn-default mb15" %>
    <%= link_to 'Export CSV', admins_forums_path(format: :csv), class: 'btn btn-default mb15' %>
    <table class="table table-stripped" id="datatable-table" >
      <thead>
        <tr>
          <th>Title</th>
          <th>Release date</th>
          <th>Expiry date</th>
          <th>Views </th>
          <th>Comments </th>
          <th>View</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @forums.each do |admins_forum| %>
          <tr>
            <td><%= admins_forum.title %></td>
            <td><%= admins_forum.print_release_date %></td>
            <td><%= admins_forum.print_expiry_date %></td>
            <td><%= admins_forum.views.count %></td>
            <td><%= admins_forum.comments.size %></td>
            <td><%= link_to 'View', admins_forum_path(admins_forum), class: "btn btn-xs btn-primary" %></td>
            <td><%= link_to 'Edit', edit_admins_forum_path(admins_forum), class: "btn btn-xs btn-warning" %></td>
            <td><%= link_to 'Delete', admins_forum_path(admins_forum), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @forums, :window => 2 %>
  </div>
</section>
