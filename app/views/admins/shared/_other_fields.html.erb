<%= f.input :tags, input_html: {class: "form-control thetags"} %><br/>
<%= f.input :release_date, as: :string, input_html: {class: "form-control datepicker"} %><br/>
<%= f.input :expiry_date, as: :string, input_html: {class: "form-control datepicker"} %><br/>
<div class="panel panel-info">
  <div class="panel-heading">Select Receiptients</div>
  <div class="panel-body">
    <%= f.input :position_ids, label: "Select Positions" do %><br/>
      <%= f.select :position_ids, @positions, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Choose Positions", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :access_level_ids, label: "Select Access Levels" do %><br/>
      <%= f.select :access_level_ids, @access_levels, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Choose Access Levels", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :department_ids, label: "Select Departments" do %><br/>
      <%= f.select :department_ids, @departments, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Choose Departments", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :practise_code_ids, label: "Select Practice Code" do %><br/>
      <%= f.select :practise_code_ids, @practise_codes, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Choose Practise Codes", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :direct_report_ids, label: "Select Direct Report" do %><br/>
      <%= f.select :direct_report_ids, @direct_reporters, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Choose Direct Reporters", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
  </div>
</div>
