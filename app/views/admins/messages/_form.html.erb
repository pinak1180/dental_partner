
<div class="panel-body">
  <%= simple_form_for(@message, url: @message.new_record? ? admins_messages_path  : admins_message_path(@message), html: {class: "col-md-12", multipart: true}) do |f| %>
    <div class="panel panel-info">
      <div class="panel-heading">Select Receiptients</div>
      <div class="panel-body">
        <%= f.input :position_ids, label: "Select Positions" do %><br/>
          <%= f.select :position_ids, @positions, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Select Positions", style: "width: 300px;", multiple: true} %>
        <% end %><br/>
        <%= f.input :access_level_ids, label: "Select Access Levels" do %><br/>
          <%= f.select :access_level_ids, @access_levels, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Select Access Levels", style: "width: 300px;", multiple: true} %>
        <% end %><br/>
        <%= f.input :department_ids, label: "Select Departments" do %><br/>
          <%= f.select :department_ids, @departments, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Select Departments", style: "width: 300px;", multiple: true} %>
        <% end %><br/>
        <%= f.input :practise_code_ids, label: "Select Practice Code" do %><br/>
          <%= f.select :practise_code_ids, @practise_codes, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Select Practice Codes", style: "width: 300px;", multiple: true} %>
        <% end %><br/>
        <%= f.input :direct_report_ids, label: "Select Direct Report" do %><br/>
          <%= f.select :direct_report_ids, @direct_reporters, {include_blank: false,include_hidden: false}, {:class => "chosen-select", "data-placeholder": "Select Direct Report", style: "width: 300px;", multiple: true} %>
        <% end %><br/>
      </div>
    </div>
    <%= f.input :message_body, as: :text, input_html: { class: "form-control", rows: 10, cols: 5 } %><br/>
    <%= f.input :sender_id, as: :hidden, input_html: {class: "form-control", value: current_user.id} %><br/>
    <%= f.input :receiver_id, as: :hidden, input_html: {class: "form-control", value: current_user.id} %><br/>
    <div class="form-actions">
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
