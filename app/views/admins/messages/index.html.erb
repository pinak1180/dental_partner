<% provide :title, "Messages" %>
<section class="panel">
  <div class="">
    <ul class="list-group mail-list">
      <% @messages.each do |message| %>
        <li class="list-group-item">
          <%= link_to admins_message_path(message.id) do %>
            <span class="show">
              <small class="pull-right"><%= message.sent_at %></small>
              <strong class="text-uppercase"><%= message.display_receiver.full_name %></strong>
            </span>
            <p>
              <%= message.short_message %>
              <% if message.msg_attachment.present? %>
                <i class="fa fa-paperclip"></i>
              <% end %>
            </p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</section>
