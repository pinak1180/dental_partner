<div class="panel-body">
  <%= simple_form_for(@admins_user, url: @admins_user.new_record? ? admins_users_path : admins_user_path(@admins_user), html: {class: "col-md-6"}) do |f| %>
    <%= f.input :first_name, input_html: {class: "form-control"} %><br/>
    <%= f.input :last_name, input_html: {class: "form-control"} %><br/>
    <%= f.input :email, input_html: {class: "form-control"} %><br/>
    <%= f.input :phone, input_html: {class: "form-control"} %><br/>
    <%= f.input :postal_code, label: "Postalcode", input_html: {class: "form-control"} %><br/>
    <%= f.input :position_ids, label: "Select Positions" do %><br/>
      <%= f.select :position_ids, @positions, {include_blank: false}, {:class => "chosen-select", "data-placeholder": "Choose Positions", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :access_level_ids, label: "Select Access Levels" do %><br/>
      <%= f.select :access_level_ids, @access_levels, {include_blank: false}, {:class => "chosen-select", "data-placeholder": "Choose Access Levels", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :department_ids, label: "Select Departments" do %><br/>
      <%= f.select :department_ids, @departments, {include_blank: false}, {:class => "chosen-select", "data-placeholder": "Choose Departments", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :practise_code_ids, label: "Select Practise Code" do %><br/>
      <%= f.select :practise_code_ids, @practise_codes, {include_blank: false}, {:class => "chosen-select", "data-placeholder": "Choose Practise Codes", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.input :direct_report_ids, label: "Select Direct Reporters" do %><br/>
      <%= f.select :direct_report_ids, @direct_reporters, {include_blank: false}, {:class => "chosen-select", "data-placeholder": "Choose Direct Reporters", style: "width: 300px;", multiple: true} %>
    <% end %><br/>
    <%= f.submit "Add User", class: "btn btn-primary" %>
  <% end %>
</div>
