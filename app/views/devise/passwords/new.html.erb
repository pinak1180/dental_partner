<%= provide :title, "Recover Password" %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.text_field :email, class: "form-control input-lg mb25", placeholder: "Email", autofocus: true %>
  <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-block"  %>
<% end %><br/>
<span style="display: block;"><%= link_to "Log in", new_session_path(resource_name) %>
