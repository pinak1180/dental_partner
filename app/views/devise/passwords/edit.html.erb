<%= provide :title, "Change Password" %>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>
  <div class="form-inputs">
    <%= f.input :password, label: false, required: true, autofocus: true, placeholder: "New Password", input_html: {class: "input-lg"} %>
    <%= f.input :password_confirmation, label: false, required: true, placeholder: "Confirm your new password",input_html: {class: "input-lg"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %></br>
<span style="display: block;"><%= link_to "Log in", new_session_path(resource_name) %>
