<%= provide :title, "Update Profile" %>
<section class="panel">
  <header class="panel-heading">Update Profile</header>
  <div class="panel-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true, class: "col-md-6" }) do |f| %>
      <p><strong><h4>Edit Profile</h4></strong></p>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control"} %><br/>
        <%= f.input :first_name, required: true, placeholder: "First Name", input_html: {class: "form-control"} %><br/>
        <%= f.input :last_name, required: true,  placeholder: "Last Name", input_html: {class: "form-control"} %><br/>
        <%= f.input :address, required: true,  placeholder: "Address", input_html: {class: "form-control"} %><br/>
        <%= f.input :phone,  placeholder: "Phone Number", input_html: {class: "phone_number form-control", maxlength: "10"} %><br/>
        <%= avatar_input_for('user[avatar]', resource.avatar.url, 'Avatar') %><br/>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: "form-control" } %><br/>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Update Profile", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= simple_form_for(resource, as: resource_name, url: update_password_admins_users_path, html: { method: :post, class: "col-md-6" }) do |f| %>
      <p><strong><h4>Change Password</h4></strong></p>
      <div class="form-inputs">
        <%= f.input :current_password, required: true, placeholder: "Current Password", input_html: {class: "form-control"} %><br/>
        <%= f.input :password, required: true, placeholder: "Password", input_html: {class: "form-control"} %><br/>
        <%= f.input :password_confirmation, required: true, placeholder: "Password Confirmation", input_html: {class: "form-control"} %><br/>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Update Password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
