<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :input_html => { :class => "form-control" } }) do |f| %>
<div class="form-group">
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
    <%= f.input :email, required: true, autofocus: true, label:false, placeholder: "Email"  %>
  </div>
</div>
<div class="form-group">
  <div class="input-group">
    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
    <%= f.input :password, required: true, label:false, placeholder: "Password" %>
  </div>
</div>
<%= link_to "Forgot Password?", new_password_path(resource_name),:class => "pull-right",style:"color: black;" %>
  <div class="text-left">
    <% if devise_mapping.rememberable? %>
      <label class="checkbox">
        <%= f.input_field :remember_me, as: :boolean, label:false if devise_mapping.rememberable? %><span>Keep me logged in</span>
      </label>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
